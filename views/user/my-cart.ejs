<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>
    <!-- Bootstrap CDN -->
    <%- include('../shared/cdn') %>
    <!-- Bootstrap CDN -->
</head>
<body>
    <!-- Header -->
    <%- include('../shared/header') %>
    <!-- Header -->

    <!-- Body -->
    <div class="container">
        <% if(items && items.length > 0) { %>
            <table class="table text-center">
                <tr>
                    <th>Sr. No.</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
                <% var len = items.length; %>
                <% var ids = []; %>
                <% var item = []; %>
                <% var totalPrice = 0; %>
                <% for(var i = 0; i < len; i++) { %>
                    <tr>
                        <td>#<%= i+1 %></td>
                        <td><%= items[i].prodName %></td>
                        <td><%= items[i].price %> Rs.</td>
                        <td><%= items[i].quantity %></td>
                        <td>
                            <a href="/user/cart/delete/<%= items[i]._id %>" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                    <% item = items[i]._id + '-' + items[i].quantity %>
                    <% ids.push(item) %>
                    <% totalPrice += parseInt(items[i].quantity) * parseFloat(items[i].price); %>
                <% } %>
            </table>
            <div class="container text-center">
                <div class="row">
                    <div class="col col-12">
                        <strong class="text-info">Total Price: <%= totalPrice %> Rs.</strong>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col col-12">
                        <a href="/user/buy/<%= ids %>" class="btn btn-outline-success w-50">Buy Now</a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center mt-5">
                <strong class="text-info">Your cart is empty.</strong> <br/>
                <a href="/" class="btn btn-success mt-3">Shop Now</a>
            </div>
        <% } %>
    
</div>
    <!-- Body -->

</body>
</html>